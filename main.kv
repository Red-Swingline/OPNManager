Screen:
    ScreenManager:
        id: screen_manager    
        Screen:
            name: "MainScreen"
            MDBoxLayout:
                id:tabs
                orientation: "vertical"
                MDToolbar:
                    title: "OPNsense Manager"
                    elevation: 10
                MDTabs:
                    id: tabs
                    on_tab_switch: app.on_tab_switch(*args)
                    Tab:
                        title:"Rules"
                        ScrollView:
                            MDList:
                                id:ruleList
                    Tab:
                        text:"VPN"
                        MDRelativeLayout:
                            MDLabel:
                                text: "VPN ON/OFF"
                                bold: True
                                pos_hint:{'center_x':.6,'center_y':.9}
                            MDSwitch:
                                id: wg_switch
                                pos_hint: {'center_x': .5, 'center_y': .9}
                                on_press: app.on_wg_active(*args)
                    Tab:
                        text:"Power"
                        bold: True
                        MDRelativeLayout:
                            MDFillRoundFlatButton:
                                pos_hint:{'center_x':.2,'center_y':.9}
                                text: "Reboot"
                                on_release:
                                    app.print_children()
                    Tab:
                        text:"Admin"
                        MDRelativeLayout:
                            MDFillRoundFlatButton:
                                pos_hint:{'center_x':.2,'center_y':.9}
                                text: "Add Rule"
                                on_release:
                                    screen_manager.current = 'add_rules'
                            MDFillRoundFlatButton:
                                pos_hint:{'center_x':.5,'center_y':.9}
                                text: "Delete Rules"
                                on_release:
                                    screen_manager.current = 'delete_rules'
        Screen:
            name: "add_rules"
            MDBoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    title: "Add Rule"
                    elevation: 10
                MDTextField:
                    id: rule_description
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint_x: .5
                    mode: "rectangle"
                    hint_text: "Enter Description"
                    helper_text: "Description"
                    helper_text_mode: "on_focus"                   
                MDTextField:
                    id: rule_uuid
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint_x: .5
                    mode: "rectangle"                           
                    hint_text: "Enter UUID"
                    helper_text: "UUID"
                    helper_text_mode: "on_focus"
                MDRaisedButton:
                    text: "Submit"
                    pos_hint: {'center_x': .5, 'center_y': .6}
                    elevation: 10
                    on_press: app.add_rule_clicked(rule_description.text, rule_uuid.text)
                MDFloatingActionButton:
                    icon: "arrow-left"
                    elevation_normal: 8
                    pos_hint: {"center_x": .7, "center_y": .5}
                    on_release: app.add_back_arrow_clicked()
                Widget:
            Widget:
            
        Screen:
            name: "delete_rules"
            FloatLayout:          
                orientation: 'vertical'
                ScrollView:
                    MDTabs:
                        id: tabs
                        on_tab_switch: app.on_tab_switch(*args)
                        Tab:
                            title:"Delete"
                            ScrollView:
                                MDList:
                                    id:ruleList_delete
                MDFloatingActionButton:
                    icon: "arrow-left"
                    elevation_normal: 10
                    pos_hint: {"center_x": .5, "center_y": .3}
                    on_release: 
                        screen_manager.current = 'MainScreen'